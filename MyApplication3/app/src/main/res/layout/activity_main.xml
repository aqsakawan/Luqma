<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/formBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        <!--android:src="@drawable/Badshahi" -->
        />-->

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox2"
        android:layout_marginTop="22dp"
        android:src="@drawable/rounded"
        android:id="@+id/imageView2" />

    <ImageView
        android:id="@+id/formLogo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/formLogo"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/luqma2" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:layout_below="@+id/formLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:alpha="0.4"
        android:background="@drawable/white_rectangle"
        android:orientation="horizontal" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/checkBox3"
        android:text="Customer" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="29dp"
        android:text="Manager" />

    <AutoCompleteTextView
        android:id="@+id/userCPassword"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_launcher_background"
        android:drawableLeft="@drawable/pass_icon"
        android:drawablePadding="2dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:textSize="12sp" />

    <AutoCompleteTextView
        android:id="@+id/userCPassword"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_alignTop="@+id/imageView2"
        android:background="@drawable/ic_launcher_background"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="2dp"
        android:hint="Username/Email"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userCPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="LoG IN" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/userCPassword"
        android:layout_below="@+id/button2"
        android:layout_marginTop="16dp"
        android:text="Number of Incorrect Attempts?"
        android:textColorHighlight="@color/colorPrimaryDark" />


</RelativeLayout>

